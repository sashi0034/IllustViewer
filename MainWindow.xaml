<Window x:Class="IllustViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IllustViewer"
        mc:Ignorable="d"
        Title="やさしいイラストビュワー" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        
    </Window.Resources>
    <Grid  Background="#333" 
           AllowDrop="True"
           Drop="grid_Drop">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="画像ファイルをここにドロップするか、&#xa;クリップボードから画像を読み取って表示します。"/>
            <Button x:Name="loadFromClipboadButton" Width="160" Height="40" Content="クリップボードから読み取り" Click="loadFromClipboadButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border"
                    BorderThickness="1"
                    BorderBrush="DarkGray"
                    Background="#eef"
                    CornerRadius="10">
                            <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Label Foreground="#aaa" Content="イラストウィンドウ上で'F11'キーを推せば&#xa;イラストウィンドウのボーダー表示を切り替えます。"/>
        </StackPanel>
    </Grid>
</Window>
